{
  "name": "meme-server-v1",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest --config jest.config.js --testPathPattern=\"test/unit/.*\\.spec\\.ts$\" --passWithNoTests",
    "test:integration": "jest --config jest.config.js --testPathPattern=\"test/integration/.*\\.spec\\.ts$\" --passWithNoTests",
    "test:e2e": "jest --config jest.config.js --testPathPattern=\"test/e2e/.*\\.spec\\.ts$\" --passWithNoTests",
    "migrate": "nest start --entryFile database/migration.command.js",
    "migrate:rollback": "nest start --entryFile database/migration.command.js migrate:rollback"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.1",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bull": "^10.2.3",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/cqrs": "^11.0.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.4.0",
    "@types/compression": "^1.7.5",
    "bcrypt": "^5.1.1",
    "bull": "^4.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "express-basic-auth": "^1.2.1",
    "express-http-context": "^1.2.4",
    "helmet": "^8.0.0",
    "ioredis": "^5.5.0",
    "joi": "^17.13.3",
    "mongoose": "^8.11.0",
    "mongoose-paginate-v2": "^1.9.0",
    "nanoid": "3.3.8",
    "nest-commander": "^3.16.1",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^11.0.11",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
